* {
    background-color: transparent;
    background-image: none;
    font-size: 16px; /* Set a default font size */
}

/* Define keyframe animations without transform */
@keyframes fadeIn {
    from {
        opacity: 0.1;
    }
    to {
        opacity: 1;
    }
}

@keyframes scaleUp {
    from {
        opacity: 0.6; /* Slight scale effect using opacity instead */
    }
    to {
        opacity: 1;
    }
}

button {
    color: #ffffff; /* Replace ${BtnCol} with a default color for testing */
    background: linear-gradient(90deg, #ffffff, #000000); /* Replace with valid colors for testing */
    outline-style: none;
    border: 2px solid white;
    background-repeat: no-repeat;
    background-position: center;
    background-size: 20%;
    border-radius: 10px;
    box-shadow: none;
    text-shadow: none;
    animation: fadeIn 0.5s ease-out; /* Apply fade-in animation */
}

button:focus {
    background-color: #101010; /* Replace @wb-act-bg with a default color for testing */
    background-size: 32%;
    background-position: center;
    animation: scaleUp 0.3s ease; /* Change to opacity scale */
    transition: all 0.3s cubic-bezier(.55, 0.0, .28, 1.682);
}

button:hover {
    background-color: #101010; /* Replace @wb-act-bg with a default color for testing */
    /*background: linear-gradient(90deg, #eeeeee, #Bbbbbb);  Replace with valid colors for testing */
    background: rgba(55,55,55,10);
    background-size: 32%;
    transition: all 0.3s cubic-bezier(.55, 0.0, .28, 1.682);
    background-position: center;
}


